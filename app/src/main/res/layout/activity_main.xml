<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardcreer"
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/black"
            android:foregroundGravity="center"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#030A47">
            <Button
                android:id="@+id/creer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Créer"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardmodifier"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/black"
            android:foregroundGravity="center"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#030A47"
            android:layout_centerInParent="true"
            android:layout_below="@+id/cardcreer"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/modifier"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Modifier"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardcontrole"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/black"
            android:foregroundGravity="center"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#030A47"
            android:layout_centerInParent="true"
            android:layout_below="@+id/cardmodifier"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/controle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Contrôler"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardcollecter"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/black"
            android:foregroundGravity="center"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#030A47"
            android:layout_centerInParent="true"
            android:layout_below="@+id/cardcontrole"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/collecter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Collecter"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardbilan"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/black"
            android:foregroundGravity="center"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="#030A47"
            android:layout_centerInParent="true"
            android:layout_below="@+id/cardcollecter"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/bilan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bilan"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>